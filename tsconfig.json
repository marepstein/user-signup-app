{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/test/*": ["./src/test/*"],
      "@/features/*": ["./src/features/*"],
      "@/ffern-friends/modules/*": ["./src/features/ffern-friends/modules/*"],
      "@/ffern-friends/services/*": ["./src/features/ffern-friends/services/*"],
      "@/ffern-friends/provider/*": ["./src/features/ffern-friends/provider/*"],
      "@/ffern-friends/hooks/*": ["./src/features/ffern-friends/hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "config/jest/jest.setup.js",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
